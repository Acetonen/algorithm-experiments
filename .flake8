[flake8]
ignore = DJ04, W503, I002, D104, C101, WPS400, D100, WPS306, D101, WPS338, WPS214, WPS230, D107, D105, D102,
    D103, WPS226, WPS202, WPS430, C408, WPS432, S101, WPS331, WPS110, WPS324, WPS407, WPS602, WPS112, WPS337,
    WPS332, WPS420, WPS335, C812, WPS323, WPS204, DAR101
builtins =
    _,
    __

exclude =
    .git,
    __pycache__,
    project/*/migrations/*,
    project/settings/*,
    valid_xml.py,
    */custom_validators/*
    */tests/*

max_complexity = 10
max-line-length = 120
